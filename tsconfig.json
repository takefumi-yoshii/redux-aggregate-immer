{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "jsx": "react",
    "lib": [
      "es5",
      "dom",
      "es2015"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
